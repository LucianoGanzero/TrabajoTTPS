<div id="<%= dom_id category %>">
  <div style="display:flex; justify-content:center; self-align:center;width: 100%;">
  <div style="width: 70%;">
    <h4><%= I18n.t("categories.attributes.name") %></h4>
    <p><%= category.name %></p>

    <h4 class="mt-5"><%= I18n.t("categories.attributes.products") %></h2>
    <% if category.products.any? %>
      <ul>
        <% category.products.each do |product| %>
          <li><%= product.name %></li>
        <% end %>
      </ul>
    <% else %>
      <p><%= I18n.t("categories.messages.products_empty") %></p>
    <% end %>

     <% if category.sizes.any? %>
    <h4><%= I18n.t("categories.attributes.sizes") %></h4>
    <div style="display: flex; flex-wrap: wrap;">
      <% category.sizes.order(:size).each do |size| %>
        <div class="p-2 border m-2" style="min-width: 100px; text-align: center;">
          <%= size.size %>
        </div>
      <% end %>
    </div>
  <% end %>
  </div>
  </div>

 
</div>
