<div id="<%= dom_id user %>">
    <h4>Nombre de usuario</h4>
    <p><%= @user.username %></p>

    <h4 class="mt-3">Email</h4>
    <p ><%= @user.email_address %></p>

    <h4 class="mt-3">Telefono</h4>
    <p><%= @user.phone.present? ? user.phone : "No especificado" %></p>

    <h4 class="mt-3">Fecha de entrada</h4>
    <p ><%= @user.entry_date.strftime('%d/%m/%Y') %></p>

    <h4 class="mt-3">Rol</h4>
    <p ><%= @user.role.name %></p>

    <h4 class="mt-3">Estado</h4>
    <p ><%= @user.active ? "Activo" : "Inactivo" %></p>

    <h4 class="mt-3">Ventas</h4>
    <p>
      <% if @user.sales.any? %>
        <% @user.sales.each do |sale| %>
          <span class="chip">
            <%= sale.total_price %>
          </span>
        <% end %>
      <% else %>
        <span>El usuario no tiene ventas realizadas</span>
      <% end %>
    </p>
</div>
