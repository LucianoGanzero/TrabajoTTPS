<%= form_with model: @sale, url: sales_path, method: :post do |f| %> 
  <div class="form-group"> <%= f.label :client, "Nombre del Cliente" %> 
    <%= f.text_field :client, class: "form-control", placeholder: "Ingrese el nombre del cliente" %> 
  </div> 
  <div class="form-group"> <%= f.label :sale_date, "Fecha de la Venta" %> 
    <%= f.datetime_field :sale_date, class: "form-control" %> 
  </div>
  <div>
    
  </div>
  <div class="form-group mt-4"> 
    <%= f.submit "Crear Venta", class: "btn btn-primary" %> 
  </div> 
<% end %>