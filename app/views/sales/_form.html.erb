<%= form_with model: @sale, url: sales_path, method: :post do |f| %> 
  <div class="form-group"> <%= f.label :client, I18n.t("sales.labels.client_name") %> 
    <%= f.text_field :client, class: "form-control", placeholder: "Ingrese el nombre del cliente" %> 
  </div> 
  <div class="form-group"> <%= f.label :sale_date, I18n.t("sales.labels.sale_date") %> 
    <%= f.datetime_field :sale_date, class: "form-control" %> 
  </div>
  <div>
    
  </div>
  <div class="form-group mt-4"> 
    <%= f.submit I18n.t("sales.create"), class: "btn btn-primary" %> 
  </div> 
<% end %>