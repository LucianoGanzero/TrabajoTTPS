<div class="container">
  
  <h1 class="text-center mb-5">Categoría #<%= @category.id %></h1>

  <%= render @category %>

<div class="mt-5 " style="width: 30%;">
  <div style="display: flex; justify-content: space-evenly;">
    <%= link_to "Editar", edit_category_path(@category), class:"btn btn-primary" %> 
    <%= link_to "Volver a gestión", store_management_path, class:"btn btn-primary" %>
  </div>
  <div class="text-center mt-5">
    <%= button_to "Eliminar categoría", @category, method: :delete, class:"btn btn-outline-danger" %>
  </div>
  </div>
 </div>