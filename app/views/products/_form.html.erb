<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.textarea :description %>
  </div>

  <div>
    <%= form.label :unit_price, style: "display: block" %>
    <%= form.text_field :unit_price %>
  </div>

  <div>
    <%= form.label :available_stock, style: "display: block" %>
    <%= form.number_field :available_stock %>
  </div>

  <div>
    <%= form.label :entry_date, style: "display: block" %>
    <%= form.datetime_field :entry_date %>
  </div>

  <div>
    <%= form.label :deactivation_date, style: "display: block" %>
    <%= form.datetime_field :deactivation_date %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
