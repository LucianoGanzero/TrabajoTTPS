<div class="container mt-5">
  <h1 class="text-center mb-5">Gestión de Tienda</h1>

  <div class="d-flex justify-content-between flex-wrap">
    <div class="me-5" style="flex: 1; min-width: 40%;">
      <h2 class="text-center">Categorías</h2>
      <table class="table table-bordered table-striped mb-4">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Cantidad de Productos</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr class="<%= 'table-danger' if category.products.count == 0 %>">
              <td><%= category.name %></td>
              <td class="text-end"><%= category.products.count %></td>
              <td><%= link_to category_path(category), class: "btn btn-outline-primary btn-sm" do%>
              <i class="fas fa-eye"></i>
              <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center">
        <%= link_to "Agregar categoría", new_category_path, class: "btn btn-primary mb-5 text-center" %>
      </div>
    </div>

    <div class="ms-5" style="flex: 1; min-width: 40%;">
      <h2 class="text-center">Colores</h2>
      <table class="table table-bordered table-striped mb-4">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Código</th>
            <th>Cantidad de productos</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @colors.each do |color| %>
            <tr class="<%= 'table-danger' if color.products.count == 0 %>">
              <td><%= color.name %></td>
              <td style="color: <%= color.code %>; font-weight: bold"><%= color.code %></td>
              <td class="text-end"><%= color.products.count %></td>
              <td><%= link_to color_path(color), class: "btn btn-outline-primary btn-sm" do%>
              <i class="fas fa-eye"></i>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center">
        <%= link_to "Agregar color", new_color_path, class: "btn btn-primary mb-5" %>
      </div>
    </div>
  </div>

  <h2>Talles</h2>
  <div style="display: flex; flex-wrap: wrap;">
    <% @number_sizes.each do |size| %>
      <div class="p-2 border m-2" style="min-width: 100px; text-align: center;">
        <%= size.size %>
      </div>
    <% end %>
  </div>
  <div class="mb-5" style="width: 100%; display: flex; flex-wrap: wrap; justify-content: flex-start; text-align: left;">
    <% @letter_sizes.each do |size| %>
      <div class="p-2 border m-2" style="min-width: 100px; text-align: center;">
        <%= size.size %>
      </div>
    <% end %>
  </div>
  <%= link_to "Agregar talle", new_size_path, class:"btn btn-primary mb-4" %>
</div>