<% @cart.orders.each do |order| %>
    <% product = order.product %>
    <div id="<%= "cart-#{product.id}" %>">
        <div id="<%= "cart-#{product.id}" %>" class="d-flex justify-content-between align-items-center mb-2">
            <span class="text-break" style="max-width: 30%;"><%= product.name %></span>
            <span class="text-muted" style="max-width: 20%;"><%= number_to_currency(product.unit_price) %></span>
            <span style="max-width: 15%;">x <%= order.quantity %></span>
            <span style="max-width: 15%;" class="text-muted"><%= order.size.size %></span>
            <span class="fw-bold" style="max-width: 20%;"><%= number_to_currency(order.total) %></span>
            <%= form_with(url: cart_remove_path, class: "ms-2") do |f| %>
                <%= f.hidden_field :id, value: order.id %>
                <%= f.submit "X", class: "btn btn-sm btn-outline-danger p-1"%>
            <% end %>
        </div>
    </div>


<% end %>
