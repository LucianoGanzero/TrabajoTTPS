<div class="container mt-5">
  <h1 class="text-center mb-5"><%= I18n.t("buttons.store_management") %></h1>

  <div class="d-flex justify-content-between flex-wrap">
    <div class="me-5" style="flex: 1; min-width: 40%;">
      <h2 class="text-center"><%= I18n.t("categories.categories") %></h2>
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th><%= I18n.t("categories.attributes.name") %></th>
            <th><%= I18n.t("categories.attributes.sizes") %></th>
            <th><%= I18n.t("products.products") %></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr class="<%= 'table-warning' if category.products.count == 0 %>">
              <td><%= link_to category.name, category_path(category), class: "btn btn-link text-start", style: "padding: 0; margin: 0;"%></td>
              <td class="text-end"><%= category.products.count %></td>
              <td class="text-center">
                <% if category.sizes.count > 0 %>
                    <span class="text-success">&#10004;</span> 
                <% else %>
                    <span class="text-danger">&#10008;</span> 
                <% end %>
                </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <small id="sizeHel" class="form-text text-muted d-block mb-4"><%= I18n.t("categories.messages.sizes") %></small>
      <div class="text-center">
        <%= link_to I18n.t("categories.add"), new_category_path, class: "btn btn-primary mb-5 text-center" %>
      </div>
    </div>

    <div class="ms-5" style="flex: 1; min-width: 45%;">
      <h2 class="text-center"><%= I18n.t("colors.colors") %></h2>
      <table class="table table-bordered table-striped mb-4">
        <thead>
          <tr>
            <th><%= I18n.t("colors.attributes.name") %></th>
            <th><%= I18n.t("colors.attributes.code") %></th>
            <th><%= I18n.t("products.products") %></th>
          </tr>
        </thead>
        <tbody>
          <% @colors.each do |color| %>
            <tr class="<%= 'table-warning' if color.products.count == 0 %>">
              <td><%= link_to color.name, color_path(color), class: "btn btn-link", style: "padding: 0; margin: 0;"%></td>
              <td>
                <div style="display: flex; align-items: center;">
                    <%= color.code %>
                    <div style="width: 15px; height: 15px; border-radius: 50%; background-color: <%= color.code %>;"></div>
                </div>
              </td>
              <td class="text-end"><%= color.products.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center">
        <%= link_to I18n.t("colors.add"), new_color_path, class: "btn btn-primary mb-5" %>
      </div>
    </div>
  </div>

  <h2><%= I18n.t("sizes.sizes") %></h2>
  <div style="display: flex; flex-wrap: wrap;">
    <% @number_sizes.each do |size| %>
      <%= link_to size_path(size), class: "btn btn-outline-primary p-2 border m-2", style: "min-width: 100px; text-align: center;" do %>
        <%= size.size %>
      <% end %>
    <% end %>
  </div>
  <div class="mb-5" style="width: 100%; display: flex; flex-wrap: wrap; justify-content: flex-start; text-align: left;">
    <% @letter_sizes.each do |size| %>
      <%= link_to size_path(size), class: "btn btn-outline-primary p-2 border m-2", style: "min-width: 100px; text-align: center;" do %>
        <%= size.size %>
      <% end %>
    <% end %>
  </div>
  <%= link_to I18n.t("sizes.add"), new_size_path, class:"btn btn-primary mb-4" %>
  <div class="mb-4">
  <%= link_to I18n.t("buttons.back_to_dashboard"), dashboard_index_path %>
</div>
</div>